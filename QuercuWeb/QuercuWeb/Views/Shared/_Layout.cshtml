        var contenidoActual = 0;

        function cambiarContenido(opcion) {
            var contenidoSeccion = document.getElementById('contenidoSeccion');
            if (opcion === 'anterior') {
                contenidoActual = (contenidoActual - 1 + contenidosCarrusel.length) % contenidosCarrusel.length;
            } else if (opcion === 'siguiente') {
                contenidoActual = (contenidoActual + 1) % contenidosCarrusel.length;
            }
            contenidoSeccion.innerHTML = contenidosCarrusel[contenidoActual];
        }

        // Cambiar de sección automáticamente cada 5 segundos
        setInterval(function () {
            cambiarContenido('siguiente');
        }, 5000);
